<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;netstandard2.0;netstandard2.1;netcoreapp3.0</TargetFrameworks>

    <Description>
      Defines functionality to help with automated testing, including extensions methods for AutoFixture.
    </Description>
    <PackageTags>testing;autofixture</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AutoFixture" Version="[4.0.0, 5.0.0)" />
    <PackageReference Include="AutoFixture.AutoMoq" Version="[4.0.0, 5.0.0)" />
    <PackageReference Include="Moq" Version="[4.11.0, 5.0.0)" />
    <PackageReference Include="NUnit" Version="3.12.0" />
  </ItemGroup>

</Project>
